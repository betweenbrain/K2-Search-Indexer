<?xml version="1.0" encoding="utf-8"?>
<install version="1.5"
         type="plugin"
         group="k2"
         method="upgrade">
	<name>K2 - Search Indexer</name>
	<author>Matt Thomas</author>
	<creationDate>January 13, 2014</creationDate>
	<copyright>2013 Matt Thomas</copyright>
	<license>GPL 2.0 or later</license>
	<authorEmail>matt@betweenbrain.com</authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<version>1.0</version>
	<description>PLG_K2_SEARCH_INDEXER_DESC</description>

	<files>
		<filename plugin="search_indexer">search_indexer.php</filename>
	</files>

	<languages>
		<language tag="en-GB">en-GB.plg_k2_search_indexer.ini</language>
	</languages>

	<params addpath="/administrator/components/com_k2/elements">
		<param name="categories"
		       type="categoriesmultiple"
		       default="0"
		       label="PLG_K2_SEARCH_INDEXER_CATEGORIES_LABEL"
		       description="PLG_K2_SEARCH_INDEXER_CATEGORIES_DESC"/>
		<param name="indexSoundex"
		       type="list"
		       default="1"
		       label="PLG_K2_SEARCH_INDEXER_INDEX_SOUNDEX_LABEL"
		       description="PLG_K2_SEARCH_INDEXER_INDEX_SOUNDEX_DESC">
			<option value="1">PLG_K2_SEARCH_INDEXER_ENABLED</option>
			<option value="">PLG_K2_SEARCH_INDEXER_DISABLED</option>
		</param>
		<param name="indexTags"
		       type="list"
		       default="1"
		       label="PLG_K2_SEARCH_INDEXER_INDEX_TAGS_LABEL"
		       description="PLG_K2_SEARCH_INDEXER_INDEX_TAGS_DESC">
			<option value="1">PLG_K2_SEARCH_INDEXER_ENABLED</option>
			<option value="">PLG_K2_SEARCH_INDEXER_DISABLED</option>
		</param>
		<param name="indexCategories"
		       type="list"
		       default="1"
		       label="PLG_K2_SEARCH_INDEXER_INDEX_CATEGORIES_LABEL"
		       description="PLG_K2_SEARCH_INDEXER_INDEX_CATEGORIES_DESC">
			<option value="1">PLG_K2_SEARCH_INDEXER_ENABLED</option>
			<option value="">PLG_K2_SEARCH_INDEXER_DISABLED</option>
		</param>
	</params>
</install>